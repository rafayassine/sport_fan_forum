<div class="col-md-10 col-md-offset-1">
  <div class="message-show">
    <h2><%= @post.title %></h2>
    <p class="message-posted-by"><%= time_ago_in_words(@post.created_at) %></p>
  </div>
  <p class="message-desc">
    <%= @post.content %>
  </p>
  <h3 class="comment-section-header">Replies :</h3>
  <%= render @post.answers %>
  <h3 class="reply-to-msg">Join Discussion</h3>
  <%= render 'answers/form' %>
  <div class="links btn-group">
    <%= link_to "Back", root_path, class: "btn btn-default" %>
    <%= link_to "Edit", edit_post_path, class: "btn btn-primary" %>
    <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure ?" }, class: "btn btn-danger" %>
  </div>
</div>
